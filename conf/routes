# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           		controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               				controllers.Assets.versioned(path="/public", file: Asset)

# Feature model creation
POST	/featureSolutionGraphs						controllers.FeatureSolutionGraphController.createFeatureSolutionGraph

# Feature models procurement
GET		/featureSolutionGraphs						controllers.FeatureSolutionGraphController.getFeatureSolutionGraphs

# Feature model procurement by id
GET		/featureSolutionGraphs/:id					controllers.FeatureSolutionGraphController.getFeatureSolutionGraphById(id)

# Adding a feature model  to a feature solution graph
GET		/featureSolutionGraphs/:id/featureModels	controllers.FeatureSolutionGraphController.getFeatureModelToFSGById(id)

# Feature models procurement
GET		/configurator/:id							controllers.ConfiguratorController.generateConfiguratorById(id)